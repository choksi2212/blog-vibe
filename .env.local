# Environment Configuration for Devnovate Blog Platform
# Copy this file to .env.local for Next.js to use these variables

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/?retryWrites=true&w=majority&appName=yourAppName

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=FAKE_FIREBASE_API_KEY_123456789
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=1234567890
NEXT_PUBLIC_FIREBASE_APP_ID=1:1234567890:web:abcdef123456
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-ABCDEFG123

# SMTP Configuration for Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=fakeuser@gmail.com
SMTP_PASS=fakepassword123
SMTP_FROM=noreply@yourdomain.com

# JWT Secret (replace with secure random strings in production)
JWT_ACCESS_SECRET=mock_access_secret_key_1234567890abcdef
JWT_REFRESH_SECRET=mock_refresh_secret_key_abcdef1234567890
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=mock_nextauth_secret_key
